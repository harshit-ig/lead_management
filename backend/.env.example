# Server Configuration
NODE_ENV=production
PORT=9000
API_PREFIX=/api

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lead-manager

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel

# Frontend URL (for CORS)
FRONTEND_URL=https://leads.edtechinformateive.uk
FRONTEND_URL_WWW=https://www.leads.edtechinformateive.uk
